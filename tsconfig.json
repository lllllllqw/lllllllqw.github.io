{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "module": "commonjs",
    "target": "esnext",
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "mock/*": [
        "mock/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "mock/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}